import re

with open("new1.txt", 'r', encoding = "utf-8") as f:
    s=f.read()
    words=s.split(' ')
    print()
    regex=r'пол(ы|е|у|о[мв]|э|а(х|ми?)?)?'
    m=re.search(regex,words)
    if m != None:
        print('Нашел')
    else:
        print('net')
